---
// Despedida.astro
---
<section class="py-4 px-4 relative overflow-hidden">
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="max-w-4xl mx-auto text-center">

      <!-- ðŸŒ¸ FLORES SUPERIORES -->
      <div class="flex justify-center mb-10" id="flores-arriba-despedida">
        <img
          src="/imagenes/Separadores.webp"
          alt="Flores decorativas"
          class="w-40 md:w-48 lg:w-56 h-auto object-contain opacity-90"
        />
      </div>

      <!-- CARD PRINCIPAL -->
      <div 
        class="relative backdrop-blur-sm bg-white/10 rounded-[2.5rem] border-2 border-[#C9A961]/20 p-10 md:p-12 lg:p-16" 
        id="card-despedida"
      >
        <!-- Brillo superior sutil -->
        <div class="absolute top-0 left-0 right-0 h-1/2 bg-gradient-to-b from-white/10 to-transparent rounded-t-[2.5rem] pointer-events-none"></div>

        <!-- Ornamentos decorativos en las esquinas -->
        <div class="absolute top-4 left-4 w-16 h-16">
          <div class="absolute top-0 left-0 w-full h-0.5 bg-gradient-to-r from-[#C9A961]/40 to-transparent"></div>
          <div class="absolute top-0 left-0 w-0.5 h-full bg-gradient-to-b from-[#C9A961]/40 to-transparent"></div>
        </div>
        <div class="absolute top-4 right-4 w-16 h-16">
          <div class="absolute top-0 right-0 w-full h-0.5 bg-gradient-to-l from-[#C9A961]/40 to-transparent"></div>
          <div class="absolute top-0 right-0 w-0.5 h-full bg-gradient-to-b from-[#C9A961]/40 to-transparent"></div>
        </div>
        <div class="absolute bottom-4 left-4 w-16 h-16">
          <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-[#C9A961]/40 to-transparent"></div>
          <div class="absolute bottom-0 left-0 w-0.5 h-full bg-gradient-to-t from-[#C9A961]/40 to-transparent"></div>
        </div>
        <div class="absolute bottom-4 right-4 w-16 h-16">
          <div class="absolute bottom-0 right-0 w-full h-0.5 bg-gradient-to-l from-[#C9A961]/40 to-transparent"></div>
          <div class="absolute bottom-0 right-0 w-0.5 h-full bg-gradient-to-t from-[#C9A961]/40 to-transparent"></div>
        </div>

        <div class="relative z-10">
          <!-- TÃTULO -->
          <div id="titulo-despedida" class="mb-8">
            <h2 class="font-charm text-3xl md:text-3xl lg:text-3xl text-[#C9A961] font-bold mb-4">
              Querida Familia y Amigos
            </h2>
            <div class="flex items-center justify-center gap-3">
              <div class="w-16 h-[2px] bg-gradient-to-r from-transparent to-[#C9A961]"></div>
              <div class="w-2 h-2 rounded-full bg-[#C9A961]"></div>
              <div class="w-16 h-[2px] bg-gradient-to-l from-transparent to-[#C9A961]"></div>
            </div>
          </div>

          <!-- MENSAJE PRINCIPAL -->
          <div id="mensaje-despedida" class="space-y-6 mb-10">
            <p class="parrafo-animado font-charm text-xl md:text-2xl lg:text-3xl text-[#8b7355] leading-relaxed">
              Nos llena de felicidad poder compartir con ustedes este momento tan Ãºnico y especial.
            </p>
            <p class="parrafo-animado font-charm text-xl md:text-2xl lg:text-3xl text-[#8b7355] leading-relaxed">
              Con la esperanza de que
              <span class="text-[#C9A961] font-bold">hagamos de este dÃ­a un recuerdo</span>
              <span class="text-[#C9A961] font-bold">inolvidable</span>.
            </p>
            <p class="parrafo-animado font-charm text-xl md:text-2xl lg:text-3xl text-[#8b7355] leading-relaxed">
              Los esperamos con los
              <span class="text-[#C9A961] font-bold">corazones llenos de emociÃ³n</span>, listos para
              <span class="text-[#C9A961] font-bold">celebrar el amor</span> y crear
              <span class="text-[#C9A961] font-bold">memorias</span> que permanezcan
              <span class="text-[#C9A961] font-bold">siempre en nuestros corazones</span>.
            </p>
          </div>

          <!-- LÃNEA DECORATIVA CON CORAZÃ“N -->
          <div class="flex items-center justify-center gap-4 my-10" id="linea-decorativa">
            <div class="w-20 h-[1px] bg-gradient-to-r from-transparent via-[#C9A961] to-[#C9A961]"></div>
            <div class="relative">
              <svg class="w-8 h-8 text-[#C9A961]" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
            <div class="w-20 h-[1px] bg-gradient-to-l from-transparent via-[#C9A961] to-[#C9A961]"></div>
          </div>

          <!-- SECCIÃ“N CONFIRMAR ASISTENCIA -->
          <div id="seccion-confirmar" class="mt-10">
            <p class="font-charm text-2xl md:text-3xl lg:text-4xl text-[#C9A961] font-bold mb-8" id="texto-confirmar">
              Esperamos contar con tu presencia
            </p>
            <div class="flex justify-center mb-10" id="boton-confirmar">
              <button
                id="btn-abrir-modal"
                class="focus:outline-none"
              >
                <img
                  src="/imagenes/ConfirmarAsistencia.webp"
                  alt="Confirmar asistencia"
                  class="w-64 md:w-72 lg:w-72 h-auto object-contain cursor-pointer transition-transform duration-300 hover:scale-105 hover:brightness-110"
                />
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- ðŸŒ¸ FLORES INFERIORES -->
      <div class="flex justify-center mt-10" id="flores-abajo-despedida">
        <img
          src="/imagenes/Separadores.webp"
          alt="Flores decorativas"
          class="w-40 md:w-48 lg:w-56 h-auto object-contain opacity-90 transform rotate-180"
        />
      </div>
    </div>
  </div>

  <!-- ðŸŽ¯ MODAL DE CONFIRMACIÃ“N -->
  <div id="modal-confirmacion" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
    <!-- Overlay con blur -->
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="modal-overlay"></div>
    
    <!-- Modal Card -->
    <div class="relative bg-gradient-to-br from-white via-[#faf8f5] to-[#f5f1eb] rounded-3xl border-2 border-[#C9A961]/30 shadow-2xl max-w-md w-full p-8 md:p-10" id="modal-card">
      
      <!-- BotÃ³n cerrar -->
      <button id="btn-cerrar-modal" class="absolute top-4 right-4 text-[#8b7355] hover:text-[#C9A961] transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Icono decorativo -->
      <div class="flex justify-center mb-6">
        <div class="bg-[#C9A961]/10 p-4 rounded-full">
          <svg class="w-12 h-12 text-[#C9A961]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
        </div>
      </div>

      <!-- TÃ­tulo -->
      <h3 class="font-charm text-3xl text-[#C9A961] font-bold text-center mb-2">
        Confirma tu Asistencia
      </h3>
      <p class="font-charm text-lg text-[#8b7355] text-center mb-8">
        Nos encantarÃ­a contar contigo
      </p>

      <!-- Formulario -->
      <div id="formulario-confirmacion" class="space-y-6">
        <!-- Campo Nombre -->
        <div>
          <label class="block font-charm text-lg text-[#8b7355] mb-2">Tu nombre completo</label>
          <input
            type="text"
            id="input-nombre"
            placeholder="Escribe tu nombre"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#C9A961]/30 bg-white/80 font-charm text-lg text-[#8b7355] focus:outline-none focus:border-[#C9A961] focus:ring-2 focus:ring-[#C9A961]/20 transition-all"
            required
          />
        </div>

        <!-- Pregunta Asistencia -->
        <div>
          <label class="block font-charm text-lg text-[#8b7355] mb-3 text-center">Â¿Confirmas tu asistencia?</label>
          <div class="flex gap-4">
            <button
              type="button"
              class="btn-asistencia flex-1 py-4 rounded-xl border-2 font-charm text-xl font-bold transition-all duration-300"
              data-value="si"
            >
              âœ“ SÃ­ asistirÃ©
            </button>
            <button
              type="button"
              class="btn-asistencia flex-1 py-4 rounded-xl border-2 font-charm text-xl font-bold transition-all duration-300"
              data-value="no"
            >
              âœ— No podrÃ©
            </button>
          </div>
        </div>

        <!-- Mensaje de error -->
        <div id="mensaje-error" class="hidden text-center text-red-500 font-charm text-sm"></div>

        <!-- BotÃ³n Enviar -->
        <button
          type="button"
          id="btn-enviar"
          class="w-full py-4 bg-gradient-to-r from-[#C9A961] to-[#d4b16e] text-white font-charm text-2xl font-bold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Enviar ConfirmaciÃ³n
        </button>
      </div>

      <!-- Mensaje de Ã©xito -->
      <div id="mensaje-exito" class="hidden text-center">
        <div class="mb-4">
          <svg class="w-16 h-16 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h4 class="font-charm text-2xl text-[#C9A961] font-bold mb-2">Â¡ConfirmaciÃ³n Enviada!</h4>
        <p class="font-charm text-lg text-[#8b7355] mb-6">Gracias por confirmar tu asistencia</p>
        <button id="btn-cerrar-exito" class="px-8 py-3 bg-[#C9A961] text-white font-charm text-lg rounded-xl hover:bg-[#d4b16e] transition-all">
          Cerrar
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      console.log('ðŸ’‘ Iniciando secciÃ³n de despedida de boda...');

      // ðŸŽ¯ ESTADO INICIAL - Todos los elementos ocultos
      gsap.set('#flores-arriba-despedida', { opacity: 0, y: -30, scale: 0.8 });
      gsap.set('#card-despedida', { opacity: 0, y: 40, scale: 0.95 });
      gsap.set('#titulo-despedida', { opacity: 0, y: 30, filter: 'blur(5px)' });
      gsap.set('.parrafo-animado', { opacity: 0, y: 30, filter: 'blur(5px)' });
      gsap.set('#linea-decorativa', { opacity: 0, scale: 0.5 });
      gsap.set('#texto-confirmar', { opacity: 0, y: 20 });
      gsap.set('#boton-confirmar', { opacity: 0, scale: 0.8, y: 20 });
      gsap.set('#flores-abajo-despedida', { opacity: 0, y: 30, scale: 0.8 });

      // âœ¨ ANIMACIÃ“N SIMULTÃNEA
      ScrollTrigger.create({
        trigger: '#flores-arriba-despedida',
        start: 'top 85%',
        end: 'top 20%',
        onEnter: () => {
          const tl = gsap.timeline();

          tl.to('#flores-arriba-despedida', {
            opacity: 0.9,
            y: 0,
            scale: 1,
            duration: 1,
            ease: 'back.out(1.5)',
          }, 0)
          .to('#card-despedida', {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 1,
            ease: 'power3.out',
          }, 0)
          .to('#titulo-despedida', {
            opacity: 1,
            y: 0,
            filter: 'blur(0px)',
            duration: 0.8,
            ease: 'power2.out',
          }, 0)
          .to('.parrafo-animado', {
            opacity: 1,
            y: 0,
            filter: 'blur(0px)',
            duration: 0.8,
            stagger: 0.15,
            ease: 'power2.out',
          }, 0)
          .to('#linea-decorativa', {
            opacity: 1,
            scale: 1,
            duration: 0.6,
            ease: 'back.out(1.5)',
          }, 0)
          .to('#texto-confirmar', {
            opacity: 1,
            y: 0,
            duration: 0.7,
            ease: 'power2.out',
          }, 0)
          .to('#boton-confirmar', {
            opacity: 1,
            scale: 1,
            y: 0,
            duration: 0.8,
            ease: 'back.out(1.5)',
          }, 0)
          .to('#flores-abajo-despedida', {
            opacity: 0.9,
            y: 0,
            scale: 1,
            duration: 1,
            ease: 'back.out(1.5)',
          }, 0);

          // Animaciones continuas
          gsap.to('#linea-decorativa svg', {
            scale: 1.3,
            duration: 1.5,
            ease: 'sine.inOut',
            yoyo: true,
            repeat: -1,
            delay: 0.5,
          });

          gsap.to('#boton-confirmar img', {
            scale: 1.05,
            y: -5,
            duration: 2.5,
            ease: 'sine.inOut',
            yoyo: true,
            repeat: -1,
            delay: 0.8,
          });

          gsap.to('#texto-confirmar', {
            textShadow: '0 0 15px rgba(201, 169, 97, 0.5)',
            duration: 2.5,
            ease: 'sine.inOut',
            yoyo: true,
            repeat: -1,
            delay: 1,
          });
        },
        onLeaveBack: () => {
          gsap.set('#flores-arriba-despedida', { opacity: 0, y: -30, scale: 0.8 });
          gsap.set('#card-despedida', { opacity: 0, y: 40, scale: 0.95 });
          gsap.set('#titulo-despedida', { opacity: 0, y: 30, filter: 'blur(5px)' });
          gsap.set('.parrafo-animado', { opacity: 0, y: 30, filter: 'blur(5px)' });
          gsap.set('#linea-decorativa', { opacity: 0, scale: 0.5 });
          gsap.set('#texto-confirmar', { opacity: 0, y: 20 });
          gsap.set('#boton-confirmar', { opacity: 0, scale: 0.8, y: 20 });
          gsap.set('#flores-abajo-despedida', { opacity: 0, y: 30, scale: 0.8 });
        },
      });

      // ðŸŽ¯ LÃ“GICA DEL MODAL
      const modal = document.getElementById('modal-confirmacion');
      const modalCard = document.getElementById('modal-card');
      const btnAbrirModal = document.getElementById('btn-abrir-modal');
      const btnCerrarModal = document.getElementById('btn-cerrar-modal');
      const modalOverlay = document.getElementById('modal-overlay');
      const inputNombre = document.getElementById('input-nombre');
      const botonesAsistencia = document.querySelectorAll('.btn-asistencia');
      const btnEnviar = document.getElementById('btn-enviar');
      const formulario = document.getElementById('formulario-confirmacion');
      const mensajeExito = document.getElementById('mensaje-exito');
      const mensajeError = document.getElementById('mensaje-error');
      const btnCerrarExito = document.getElementById('btn-cerrar-exito');

      let asistenciaSeleccionada = null;

      // Abrir modal
      btnAbrirModal?.addEventListener('click', () => {
        modal?.classList.remove('hidden');
        gsap.fromTo(modalCard, 
          { scale: 0.8, opacity: 0 },
          { scale: 1, opacity: 1, duration: 0.4, ease: 'back.out(1.5)' }
        );
      });

      // Cerrar modal
      const cerrarModal = () => {
        gsap.to(modalCard, {
          scale: 0.8,
          opacity: 0,
          duration: 0.3,
          ease: 'power2.in',
          onComplete: () => {
            modal?.classList.add('hidden');
            resetearFormulario();
          }
        });
      };

      btnCerrarModal?.addEventListener('click', cerrarModal);
      modalOverlay?.addEventListener('click', cerrarModal);
      btnCerrarExito?.addEventListener('click', cerrarModal);

      // SelecciÃ³n de asistencia
      botonesAsistencia.forEach(btn => {
        btn.addEventListener('click', () => {
          botonesAsistencia.forEach(b => {
            b.classList.remove('border-[#C9A961]', 'bg-[#C9A961]/10', 'text-[#C9A961]');
            b.classList.add('border-gray-300', 'bg-white', 'text-[#8b7355]');
          });
          
          btn.classList.remove('border-gray-300', 'bg-white', 'text-[#8b7355]');
          btn.classList.add('border-[#C9A961]', 'bg-[#C9A961]/10', 'text-[#C9A961]');
          
          asistenciaSeleccionada = btn.dataset.value;
          mensajeError?.classList.add('hidden');
        });
      });

      // Enviar confirmaciÃ³n
      btnEnviar?.addEventListener('click', async () => {
        const nombre = inputNombre?.value.trim();

        if (!nombre) {
          mensajeError.textContent = 'Por favor ingresa tu nombre';
          mensajeError?.classList.remove('hidden');
          return;
        }

        if (!asistenciaSeleccionada) {
          mensajeError.textContent = 'Por favor selecciona si asistirÃ¡s o no';
          mensajeError?.classList.remove('hidden');
          return;
        }

        // Deshabilitar botÃ³n
        btnEnviar.disabled = true;
        btnEnviar.textContent = 'Enviando...';

        try {
          // ðŸš€ AQUÃ VA LA URL DE TU GOOGLE APPS SCRIPT
          const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbydSOEp9OVQbsk-nsDosm-ZlFF7pi-2tzUow6-tl9bOEpMSSsYd-H_gO33Lgn8fdgg2eA/exec'; // La obtendrÃ¡s en el paso 2
          
          const response = await fetch(SCRIPT_URL, {
            method: 'POST',
            mode: 'no-cors',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              nombre: nombre,
              asistencia: asistenciaSeleccionada === 'si' ? 'SÃ­' : 'No',
              fecha: new Date().toLocaleString('es-ES', { timeZone: 'America/La_Paz' })
            })
          });

          // Mostrar mensaje de Ã©xito
          formulario?.classList.add('hidden');
          mensajeExito?.classList.remove('hidden');

        } catch (error) {
          console.error('Error:', error);
          mensajeError.textContent = 'Hubo un error. Por favor intenta de nuevo.';
          mensajeError?.classList.remove('hidden');
          btnEnviar.disabled = false;
          btnEnviar.textContent = 'Enviar ConfirmaciÃ³n';
        }
      });

      // Resetear formulario
      const resetearFormulario = () => {
        if (inputNombre) inputNombre.value = '';
        asistenciaSeleccionada = null;
        botonesAsistencia.forEach(b => {
          b.classList.remove('border-[#C9A961]', 'bg-[#C9A961]/10', 'text-[#C9A961]');
          b.classList.add('border-gray-300', 'bg-white', 'text-[#8b7355]');
        });
        mensajeError?.classList.add('hidden');
        formulario?.classList.remove('hidden');
        mensajeExito?.classList.add('hidden');
        if (btnEnviar) {
          btnEnviar.disabled = false;
          btnEnviar.textContent = 'Enviar ConfirmaciÃ³n';
        }
      };

      console.log('ðŸ’‘âœ¨ Â¡SecciÃ³n de despedida activada con Ã©xito!');
    });
  }
</script>

<style>
  #card-despedida {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #card-despedida:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(201, 169, 97, 0.2);
  }

  #mensaje-despedida span {
    transition: all 0.3s ease;
    display: inline-block;
  }

  #mensaje-despedida span:hover {
    color: #d4b16e;
    transform: scale(1.05);
    text-shadow: 0 2px 10px rgba(201, 169, 97, 0.4);
  }

  .btn-asistencia {
    border-color: #d1d5db;
    background-color: white;
    color: #8b7355;
  }

  .btn-asistencia:hover {
    border-color: #C9A961;
    background-color: rgba(201, 169, 97, 0.05);
  }
</style>